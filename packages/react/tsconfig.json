{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["es2017", "dom", "ESNext"],
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["jest"]
  },
  "include": ["./src/**/*"],
  "exclude": ["**/node_modules", "**/.*", "./xeno", "./dist", "./.temp"]
}
